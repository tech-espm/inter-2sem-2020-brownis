    <script type="text/javascript">
        var spMaskBehavior = function(val) {
                return val.replace(/\D/g, '').length === 11 ? "(00) 00000-0000" : "(00) 0000-00009";
            },
            spOptions = {
                onKeyPress: function(val, e, field, options) {
                    field.mask(spMaskBehavior.apply({}, arguments), options);
                }
            };
        $("#telefone").mask(spMaskBehavior, spOptions);

        var jaComecou = false,
            valorAtual = 0,
            valorMaximo = 500,
            spanVendidos = document.getElementById("spanVendidos"),
            secaoA = document.getElementById("secaoA");

        function contar() {
            var incremento = 1 + Math.round(Math.random() * 10);
            valorAtual = valorAtual + incremento;
            if (valorAtual >= valorMaximo) {
                valorAtual = valorMaximo;
            } else {
                setTimeout(contar, 20);
            }
            spanVendidos.textContent = valorAtual;
        }

        function validarContador() {
            if (jaComecou) {
                return;
            }

            if ((secaoA.offsetTop - window.scrollY - window.innerHeight) <= -200) {
                jaComecou = true;
                setTimeout(contar, 20);
            }
        }

        $("#form").validate({
            rules: {
                nome: {
                    required: true
                },
                email: {
                    required: true,
                    email: true
                },
                telefone: {
                    required: true
                },
                bairro: {
                    required: true
                },
                endereco: {
                    required: true
                },
                tradicional: {
                    required: true,
                    number: true,
                    min: 0
                },
                nozes: {
                    required: true,
                    number: true,
                    min: 0
                },
                mem: {
                    required: true,
                    number: true,
                    min: 0
                },
                oreo: {
                    required: true,
                    number: true,
                    min: 0
                },
                branco: {
                    required: true,
                    number: true,
                    min: 0
                },
                nutella: {
                    required: true,
                    number: true,
                    min: 0
                },
                limao: {
                    required: true,
                    number: true,
                    min: 0
                },
                bichope: {
                    required: true,
                    number: true,
                    min: 0
                },
                beijinho: {
                    required: true,
                    number: true,
                    min: 0
                }
            },
            submitHandler: function(form) {
                if ($.active) {
                    return;
                }

                if (!parseInt($("#tradicional").val()) &&
                    !parseInt($("#nozes").val()) &&
                    !parseInt($("#mem").val()) &&
                    !parseInt($("#oreo").val()) &&
                    !parseInt($("#branco").val()) &&
                    !parseInt($("#nutella").val()) &&
                    !parseInt($("#limao").val()) &&
                    !parseInt($("#bichope").val()) &&
                    !parseInt($("#beijinho").val())) {
                    $("#myModal").modal({
                        keyboard: true,
                        backdrop: true
                    });
                    return;
                }
                $("#imgLoader").show();

                $.ajax({
                    url: "/api/pedido/enviar",
                    method: "POST",
                    data: $(form).serialize(),
                    success: function(data) {
                        $("#imgLoader").hide();

                        if (data === true) {
                            $("#myModal2").modal({
                                keyboard: true,
                                backdrop: true
                            });
                        } else {
                            $("#myModal3").modal({
                                keyboard: true,
                                backdrop: true
                            });
                        }
                    },
                    error: function() {
                        $("#imgLoader").hide();

                        $("#myModal3").modal({
                            keyboard: true,
                            backdrop: true
                        });
                    }
                });
            }
        });

        window.onscroll = validarContador;
    </script>

