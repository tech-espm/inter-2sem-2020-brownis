    <script type="text/javascript">

        var jaComecou = false,
            valorAtual = 0,
            valorMaximo = 500,
            spanVendidos = document.getElementById("spanVendidos"),
            secaoA = document.getElementById("secaoA");

        function contar() {
            var incremento = 1 + Math.round(Math.random() * 10);
            valorAtual = valorAtual + incremento;
            if (valorAtual >= valorMaximo) {
                valorAtual = valorMaximo;
            } else {
                setTimeout(contar, 20);
            }
            spanVendidos.textContent = valorAtual;
        }

        function validarContador() {
            if (jaComecou) {
                return;
            }

            if ((secaoA.offsetTop - window.scrollY - window.innerHeight) <= -200) {
                jaComecou = true;
                setTimeout(contar, 20);
            }
        }
        
        window.onscroll = validarContador;

